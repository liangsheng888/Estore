<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f0f0"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="30dp">
        <ImageView
            android:id="@+id/iv_touxiang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          />

    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#fff"
        android:layout_margin="10dp"
        >
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="请用邮箱登录"
            android:background="@null"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:textColor="#b6b4b4"
            />
        <!--下划线-->
        <ImageView
            android:layout_below="@id/et_username"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e1e1e1"

            />
        <EditText
            android:id="@+id/et_psd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="密码"
            android:background="@null"
            android:inputType="numberPassword"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:textColor="#b6b4b4"
            android:layout_below="@id/et_username"
            />
        <!--下划线-->
        <ImageView
            android:layout_below="@id/et_psd"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e1e1e1"

            android:id="@+id/imageView" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/et_psd"
            android:layout_alignParentStart="true"
            android:id="@+id/rb_rememberPsd" />

        <RelativeLayout
            android:layout_below="@id/et_psd"
            android:id="@+id/rl_butlogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="#93dada"
            android:layout_marginTop="50dp"
            >
            <TextView
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textSize="20dp"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>


        <TextView
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_alignBottom="@+id/rb_rememberPsd"
            android:layout_alignEnd="@+id/imageView" />

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/pb_login_state"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
         />
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:gravity="center"
        android:text="正在登录..."
        android:textSize="18dp"

        />

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_moreways"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"

            >
            <ImageView
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="#e6e6e6"
                />
            <TextView
                android:id="@+id/tv_morelogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多方式登录"
                android:textSize="20dp"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:layout_width="115dp"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_morelogin"
                android:layout_centerVertical="true"
                android:background="#e6e6e6"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/moreway"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_morelogin"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_below="@id/rl_moreways"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weixin"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weibo"
                android:layout_toLeftOf="@id/iv_weixin"
                android:layout_marginRight="40dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_weixin"
                android:layout_marginLeft="40dp"
                android:src="@drawable/qq"
                />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
