<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#dedbdb"
        >
        <ImageView
            android:id="@+id/iv_pubEstitem_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/xiaoyu"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二货详情"
            android:textSize="22dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_ersell_detial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/iv_erdetial_propic"
            android:layout_width="match_parent"
            android:src="@drawable/pro"
            android:layout_height="200dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            />
        <!-- 分割线 -->
        <ImageView
            android:layout_below="@id/iv_erdetial_propic"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a6a5a5"
            />
        <TextView
            android:id="@+id/tv_erdetial_represent"
            android:text="商品描述:"
            android:layout_below="@id/iv_erdetial_propic"
            android:textSize="22sp"
            android:textColor="#222222"
            android:background="#e9e6e6"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:id="@+id/tv_erdetial_proname"
            android:text="商品名字:"
            android:layout_below="@id/tv_erdetial_represent"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:textColor="#222222"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_erdetial_procategory"
            android:text="类型:"
            android:layout_below="@id/tv_erdetial_represent"
            android:textSize="22sp"
            android:textColor="#222222"
            android:layout_toRightOf="@id/tv_erdetial_proname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv_erdetial_proprice"
            android:text="0.00:"
            android:textSize="24sp"
            android:textColor="#fc3636"
            android:background="#fff23d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/tv_erdetial_proname"
            />
        <TextView
            android:id="@+id/tv_erdetial_pronumber"
            android:text="商品个数:"
            android:layout_below="@id/tv_erdetial_proname"
            android:textSize="22sp"
            android:textColor="#222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_erdetial_proprice"
            />
        <TextView
            android:id="@+id/tv_pubestorewhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型"
            android:textSize="20dp"
            android:layout_below="@id/tv_erdetial_proprice"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"

            />
        <TextView
            android:id="@+id/tv_pubestorewhere1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:textSize="20dp"
            android:layout_below="@id/tv_erdetial_pronumber"
            android:layout_toRightOf="@id/tv_erdetial_proprice"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"

            />
    </RelativeLayout>

</LinearLayout>
