<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    >
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f00"
        >
        <ImageView
            android:id="@+id/iv_pubEstitem_return"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/last_white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二货详情"
            android:textSize="24dp"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ffffff"
        >


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:id="@+id/iv_erdetial_propic"
                android:scaleType="centerCrop"
                android:layout_width="350dp"
                android:layout_height="350dp">
            </android.support.v4.view.ViewPager>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_quan1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/point_red" />

                <ImageView
                    android:id="@+id/iv_quan2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="20dp"

                    android:src="@drawable/point_gray" />

                <ImageView
                    android:id="@+id/iv_quan3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/point_gray" />
            </LinearLayout>
        </FrameLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_erdetial_proname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_margin="10dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/tv_erdetial_represent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="描述"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_erdetial_pronumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个数"
        android:textColor="#ff4848"
        android:layout_marginLeft="10dp"
       />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        >

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/price"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/tv_erdetial_proprice"
                android:text="0.00:"
                android:textSize="18sp"
                android:textColor="#686666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom"
                />
            <TextView
                android:id="@+id/tv_erdetial_postmoney"
                android:text="邮费"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="bottom"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/timeclock"
                android:layout_gravity="bottom"
                android:layout_marginLeft="120dp"
                />
            <TextView
                android:id="@+id/tv_ehtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:layout_marginRight="80dp"
                android:layout_gravity="bottom"
                android:gravity="right"
                />

        </LinearLayout>
        <ImageView
            android:layout_below="@id/ll_price"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cecccc"
            />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--下面的按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prod_info_bottom"
            android:layout_alignParentBottom="true"
            android:padding="8dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_touch_seller"
                android:background="@drawable/shape_yellow"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"

                android:text=""/>

            <Button
                android:id="@+id/btn_modifypro"
                android:background="@drawable/corners_bg"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="#ffffff"

                android:text="修改"/>
            <Button
                android:id="@+id/btn_deletepro"
                android:background="@drawable/shape_red"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="删除"/>
        </LinearLayout>

    </RelativeLayout>





</LinearLayout>
