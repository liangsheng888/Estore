<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="#fff">

    <ImageView
        android:id="@+id/iv_auct_imgurl"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/emoji_100" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_auct_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ellipsize="marquee"
            android:text="挥泪大甩卖只要998"
            android:textColor="#f6155426"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_endbidprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:drawableLeft="@drawable/nowprice"
            android:text="￥999"
            android:gravity="center_vertical"
            android:textColor="#d4ff0000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_auct_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
android:textColor="#3f4f64"
            android:text="倒计时：10：59:59" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_auct_minprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_endbidprice"
            android:layout_below="@+id/tv_endbidprice"
            android:paddingTop="5dp"
            android:text="￥111元"
            android:textColor="#6e7076"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:src="@drawable/bidding_tixing" />
</LinearLayout>
    </LinearLayout>
</LinearLayout>
