<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ecebeb"
    >
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ffffff"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/rl_lineeh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#ffffff"
            >
            <ImageView
                android:id="@+id/iv_pubauctionpic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/pro"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_pubauctionname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品描述"
                android:textSize="16dp"
                android:layout_toRightOf="@id/iv_pubauctionpic"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/tv_pubauctionprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格:o.oo"
                android:background="#f5d965"
                android:textSize="16dp"
                android:textColor="#f95151"
                android:layout_below="@id/tv_pubauctionname"
                android:layout_toRightOf="@id/iv_pubauctionpic"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                />
            <ImageView
                android:id="@+id/iv_moneypic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/price"
                android:layout_toLeftOf="@id/tv_pubauctionprice"
                android:layout_below="@id/tv_pubauctionprice"
                android:layout_marginTop="-15dp"
                android:layout_marginRight="-35dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shijian1"
                android:layout_below="@id/iv_moneypic"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv_pubauctionpic"
                />
            <TextView
                android:id="@+id/tv_pubauctiontime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:textSize="14dp"
                android:textColor="#6b6b6b"
                android:layout_toRightOf="@id/iv_pubauctionpic"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/tv_pubauctionprice"

                />


        </RelativeLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp">
    </RelativeLayout>
</LinearLayout>
