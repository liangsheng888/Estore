<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#dcdcdc"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"

        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/xiaoyu"
        android:layout_centerVertical="true"
        />

</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="标题(名字)"
            android:textColor="#d6d6d6"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#ffffff"
        >
        <EditText
            android:background="@null"
            android:id="@+id/et_represent"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="二货历史简介/描述"
            android:textColor="#d2d1d1"
            />
        <ImageView
            android:id="@+id/takephoto"
            android:layout_below="@id/et_represent"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/takephoto"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setplace"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="江苏 苏州 吴中区"
            android:layout_toRightOf="@id/iv_place"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <ImageView
        android:layout_below="@id/et_represent"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#eae9e8"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <TextView
            android:id="@+id/samecity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同城"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            />
        <ImageView
            android:id="@+id/samecity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/samecitys"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/samecity"
            android:layout_marginLeft="20dp"

            />
        <TextView
            android:id="@+id/heighschool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高校"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/samecity1"
            android:layout_marginLeft="30dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/heighschool"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/schoolgray"
            />
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分类"
        android:textSize="22dp"

        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerInParent="true"
    android:textSize="20dp"
    android:textColor="#d2d1d1"
    android:text="请选择分类"
    />
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/dayu"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="10dp"
    />

</RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cfcfcf"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textSize="22dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dayu"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cfcfcf"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#eae9e8"
        android:layout_marginTop="60dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认发布"
            android:textSize="24dp"
            android:textColor="#acacac"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"


            />

    </RelativeLayout>
</LinearLayout>
