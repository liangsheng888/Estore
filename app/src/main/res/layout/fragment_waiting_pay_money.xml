<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.estore.fragment.WaitingPayMoneyFragment">

    <!-- TODO: Update blank fragment layout -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:id="@+id/ll_jiazai_pay"
      android:orientation="vertical">
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:id="@+id/tv_jiazai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="正在加载...."/>
  </LinearLayout>
  <LinearLayout
      android:id="@+id/ll_nothing"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="gone"
      android:layout_gravity="center"
      android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_proeval"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/last_white"
        android:layout_marginTop="-80dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="亲，没有需要付款的商品！"
        android:textSize="26sp"
        android:layout_marginTop="40dp"
        />
  </LinearLayout>
    <ListView
        android:id="@+id/lv_unPay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>


</FrameLayout>
