<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#f7f6f6"
        >
        <ImageView
            android:id="@+id/iv_intercalate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/set"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xiaoyu"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"

            />
        <ImageView
            android:id="@+id/iv_userphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/userphoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="渣渣冯"
            android:textSize="22dp"
            android:background="#d0d1d1"
            android:layout_below="@id/iv_userphoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#f2f2f2"
        />
    <RadioGroup
        android:id="@+id/rg_grouprank"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_publish"
            android:drawableTop="@drawable/fabu"
            android:text="我的发布"
            style="@style/buttonrank"
            />

        <RadioButton
            android:id="@+id/rb_auction"
            android:drawableTop="@drawable/paimai"
            android:text="我的拍卖"
            style="@style/buttonrank"
            />
        <RadioButton
            android:id="@+id/rb_myorder"
            android:drawableTop="@drawable/jiaoyi_gray"
            style="@style/buttonrank"
            android:text="我的订单"
            />
    </RadioGroup>
    <!-- 分割线 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#f2f2f2"
        />
    <RadioGroup

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="220dp"
        >
       <RadioButton
           android:id="@+id/rb_myfriends"
           style="@style/buttonvertical"
           android:text="我的好友"
           android:drawableLeft="@drawable/friends"
            android:drawableRight="@drawable/dayu"
           android:layout_marginRight="20dp"
           />
        <!-- 分割线 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f2f2f2"
            />
        <RadioButton
            android:id="@+id/rb_mycare"
            style="@style/buttonvertical"
            android:text="我的关注"
            android:drawableLeft="@drawable/care"
            android:drawableRight="@drawable/dayu"
            android:layout_marginRight="20dp"
            />
        <!-- 分割线 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f2f2f2"
            />
        <RadioButton
            android:id="@+id/rb_mywallet"
            style="@style/buttonvertical"
            android:text="我的钱包"
            android:drawableLeft="@drawable/money"
            android:drawableRight="@drawable/dayu"
            android:layout_marginRight="20dp"
            />
        <!-- 分割线 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f2f2f2"
            />
        <RadioButton
            android:id="@+id/rb_mynotice"
            style="@style/buttonvertical"
            android:text="系统通知"
            android:drawableLeft="@drawable/notice"
            android:drawableRight="@drawable/dayu"
            android:layout_marginRight="20dp"
            />
        <!-- 分割线 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f2f2f2"
            />


    </RadioGroup>


</LinearLayout>
