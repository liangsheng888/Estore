<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop">

    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/btn_tiaoguo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/tiaozhuan_color"
        android:text="跳过"
        android:textSize="20sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="100dp"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_flash1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/point_red" />

        <ImageView
            android:id="@+id/iv_flash2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"

            android:src="@drawable/point_gray" />

        <ImageView
            android:id="@+id/iv_flash3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/point_gray" />

        <ImageView
            android:id="@+id/iv_flash4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/point_gray" />
    </LinearLayout>
    
<TextView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/tv_liji"
    android:gravity="center"
    android:textSize="24sp"
    android:textColor="#00f"
    android:layout_marginBottom="20dp"
    android:visibility="invisible"
    android:layout_gravity="center_horizontal|bottom"
    android:text="立即体验"/>

</FrameLayout>
