<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_project_photo"
        android:src="@drawable/tupian"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <TextView
        android:id="@+id/tv_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_project_photo"
        android:layout_alignTop="@id/iv_project_photo"
        android:layout_marginLeft="20dp"
        android:text="商品名称"
        android:paddingRight="20dp"
        android:textSize="26sp"/>


    <TextView
        android:id="@+id/tv_project_price"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格"
        android:textColor="#aaff0000"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_project_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_project_photo"
        android:layout_alignBottom="@id/iv_project_photo"
        android:layout_marginLeft="20dp"
        android:text="商品描述"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#aa00ff00"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="¥"/>

    <TextView
        android:id="@+id/tv_product_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机"
        android:background="#CCFF66"
        android:textSize="16sp"
        android:layout_toRightOf="@id/tv_project_name"
        android:layout_alignBottom="@id/tv_project_name"
        />
</RelativeLayout>