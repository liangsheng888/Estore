<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#c3f3fc"
    >
    <RelativeLayout
        android:id="@+id/rl_line01"
        android:background="#ffffff"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
       android:layout_marginLeft="20dp"
        >
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个数"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            />
        <EditText
           android:layout_toRightOf="@id/tv_number"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:background="#afafaf"
        android:layout_centerInParent="true"
        />
        <TextView
            android:id="@+id/tv_prices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_line"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_toRightOf="@id/tv_prices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y 000"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="#f4a2a2"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_line02"
        android:layout_below="@id/rl_line01"
        android:layout_width="350dp"
        android:layout_centerInParent="true"
        android:textColor="#5e5e5e"
        android:layout_height="1dp" />
    <RelativeLayout

        android:layout_below="@id/iv_line02"
        android:background="#ffffff"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/tv_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费   "
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/tv_realfee"
            android:layout_toRightOf="@id/tv_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y 000"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="#f4a2a2"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_postfee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="包邮"
            android:textSize="20dp"
            android:layout_marginLeft="65dp"
            android:layout_toRightOf="@id/tv_realfee"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yes_post"
            android:layout_toRightOf="@id/tv_postfee"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>

</RelativeLayout>

</LinearLayout>
