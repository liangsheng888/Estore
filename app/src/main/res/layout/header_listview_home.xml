<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_home_head"
    android:orientation="vertical">
    <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
        android:id="@+id/autoScrollViewPager"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#2200ff00"
      android:orientation="horizontal">
      <Button
          android:id="@+id/btn_school_GridView_home"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:text="校园"
          android:background="@android:color/transparent"
          android:drawableLeft="@mipmap/school"
          android:drawablePadding="-30dp"
          android:layout_weight="1"/>
      <Button
          android:id="@+id/btn_city_GridView_home"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:drawableLeft="@mipmap/city"
          android:drawablePadding="-30dp"
          android:background="@android:color/transparent"
          android:text="同城"
          android:layout_weight="1"/>
      <Button
          android:id="@+id/btn_auction_GridView_home"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:drawablePadding="-30dp"
          android:text="最新拍卖"
          android:background="@android:color/transparent"
          android:drawableLeft="@mipmap/paimai"
          android:layout_weight="1"/>
  </LinearLayout>
</LinearLayout>
