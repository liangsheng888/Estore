<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f7f7"
    android:id="@+id/fl_samecity"
    tools:context="com.estore.fragment.SameCityFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="全部"
                android:gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="手机"
                android:gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_computer"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="电脑"
                android:gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_computertext"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="笔记本"
                android:gravity="center"
                android:textSize="16sp"/>



            <TextView
                android:id="@+id/tv_others"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="其它"
                android:gravity="center"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_sort"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/sortfenlei"
                android:layout_marginTop="3dp"/>
        </LinearLayout>

        <com.estore.view.LoadListView
            android:id="@+id/lv_same_city"
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#000000"
            android:divider="#19000000"
            android:dividerHeight="4dp"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:smoothScrollbar="true"
            ptr:ptrAnimationStyle="rotate"
            ptr:ptrHeaderTextColor="#ffffff"
            ptr:ptrHeaderSubTextColor="#00ffff"
            ptr:ptrHeaderBackground="@null"
            ptr:ptrDrawable="@mipmap/refrsh"
            ptr:ptrMode="disabled">
        </com.estore.view.LoadListView>
    </LinearLayout>
</FrameLayout>
