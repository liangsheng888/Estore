    <LinearLayout
    android:orientation="vertical"
    android:id="@+id/rl_samecity_sort"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <!--<HorizontalScrollView
            android:id="@+id/filter_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center">-->
        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">
            <TextView
                android:gravity="center"
                android:id="@+id/btn_sort_phone"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="手  机"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#aa000000"/>
            <TextView
                android:gravity="center"
                android:id="@+id/btn_sort_computer"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="电  脑"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#aa000000"/>
            <TextView
                android:gravity="center"
                android:id="@+id/btn_sort_match"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="笔记本"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#aa000000"/>
            <TextView
                android:gravity="center"
                android:id="@+id/btn_sort_others"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="其  他"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#aa000000"/>
            <TextView
                android:gravity="center"
                android:id="@+id/btn_sort_price_up"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="价 格↑"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#aa000000"/>
            <TextView
                android:gravity="center"
                android:id="@+id/btn_sort_price_down"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="价 格↓"/>
        </LinearLayout>
        <!--</HorizontalScrollView>-->
        <!--<ListView
            android:id="@+id/lv_same_city"
            android:layout_width="match_parent"
