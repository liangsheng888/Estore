    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/rl_samecity_sort"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
    <Button
        android:id="@+id/btn_sort_phone"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="手机"/>
        <Button
            android:id="@+id/btn_sort_computer"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="电脑"/>
        <Button
            android:id="@+id/btn_sort_match"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="笔记本"/>
        <Button
            android:id="@+id/btn_sort_others"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="其他"/>
        <Button
            android:id="@+id/btn_sort_price_up"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="价格↑"/>
        <Button
            android:id="@+id/btn_sort_price_down"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="价格↓"/>
    </LinearLayout>
