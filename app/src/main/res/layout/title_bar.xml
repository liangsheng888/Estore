<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  	    android:id="@+id/id_prod_list_title"
  	    android:layout_width="match_parent"
  	    android:layout_height="48dp"
  	    android:orientation="horizontal"
  	    android:weightSum="5"
  	    android:background="@drawable/tab_bg">
  	    <ImageView 
  	        android:id="@+id/iv_project_detail_back"
  	        android:layout_weight="1"
  	        android:layout_width="0dp"
  	        android:layout_height="wrap_content"
  	        android:layout_gravity="center"
  	        android:clickable="true"
  	        android:src="@drawable/nav_back"
  	        />
  	    <TextView 
  	        android:id="@+id/id_prod_list_tv"
  	        android:layout_width="0dp"
  	        android:layout_height="match_parent"
  	        android:gravity="center"
  	       	android:layout_weight="3"
  	        android:text="商品列表"
  	        android:textColor="@android:color/black"
  	        android:textSize="18sp"
  	        android:textStyle="bold"/>
  	    <RelativeLayout 
  	        android:id="@+id/title_bar_rl_cartview"
  	        android:layout_width="0dp"
  	        android:layout_height="wrap_content"
  	        android:layout_weight="1"

  	        android:layout_gravity="center_vertical">
  	        <ImageView
  	        android:id="@+id/id_prod_list_iv_right"
  	        android:layout_width="28dp"
  	        android:layout_height="28dp"
  	        android:layout_gravity="center_vertical"
  	        android:src="@drawable/ic_cart" 
  	        android:scaleType="centerCrop"
  	        />
  	       <TextView
  	       	 android:id="@+id/title_bar_reddot"
	        android:layout_width="50dp"
	        android:layout_height="16dp"
	        android:layout_alignRight="@id/id_prod_list_iv_right"
			android:background="@drawable/reddot"

	        android:gravity="center"
	        android:text="0"
	        android:textSize="12sp"
	        android:textColor="#ffffff" />
  	    </RelativeLayout>
  	    
  	  
  	    <TextView
  	        android:id="@+id/id_title_bar_right"
  	        android:visibility="gone"
  	         android:layout_width="0dp"
  	        android:layout_height="wrap_content"
  	        android:layout_weight="1"
  	        android:layout_gravity="center_vertical"
  	        android:textColor="#88ECEE"
  	        android:text="编辑"
  	        android:textSize="16sp"
  	        />
  	  

</LinearLayout>
